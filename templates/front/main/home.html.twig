{% extends "base.html.twig" %}
{% block title %}Portfolio Mathilde Rouland{% endblock %}
{% block body %}
<main id="main">
    {% for section in sections %}
        
            <section id="{{ section.designation }}" class="{{ section.designation }}">
                <div class="container">
                    <div class="section-title">
                        <h2>{{ section.title }}</h2>
                        <p>{{ section.content|raw }}</p>
                    </div>
                    <div class="row">
                    {% if section.designation == 'about' %}
                        {% include 'front/main/about.html.twig' %}
                    {% elseif section.designation == 'skills' %}
                        {% include 'front/main/skills.html.twig' %}
                    {% elseif section.designation == 'resume' %}
                        {% include 'front/main/resume.html.twig' %}
                    {% elseif section.designation == 'projects' %}
                        {% include 'front/main/projects.html.twig' %}
                    {% elseif section.designation == 'contact' %}
                        {% include 'front/main/contact.html.twig' %}
                    {% endif %}
                    </div>
                </div>
            </section>
        
            
        
    {% endfor %}
</main>
{% endblock %}

   